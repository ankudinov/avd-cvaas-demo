{
	"name": "ansible-avd-devcontainer",
	"build": {
        "dockerfile": "Dockerfile",
        "args": {
            "_AR_FILE_PATH": "/support/download/EOS-USA/Active Releases/4.29/EOS-4.29.3M/cEOS-lab/cEOS-lab-4.29.3M.tar.xz",
            "_ARTOKEN": "${localEnv:ARTOKEN}"
        }
    },
    "remoteEnv": {
		"CONTAINERWSF": "${containerWorkspaceFolder}"
	},
    "onCreateCommand": "docker import /home/vscode/tmp/ceos-lab-temp ceos-lab:latest; rm -rf /home/vscode/tmp/; echo \"${localEnv:CVTOKEN}\" > ${CONTAINERWSF}/clab/cv-onboarding-token",
    // set minimum host requirements for cLab
    "hostRequirements": {
        "cpus": 4,
        "memory": "8gb",
        "storage": "32gb"
    }
}